<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_menu_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_header_bg"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/img_menu_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@drawable/avatar"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_menu_head"
            android:layout_alignTop="@+id/img_menu_head"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/img_menu_head"
            android:gravity="center_vertical"
            android:text="巡查员"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/menu_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu_list_color"
        android:cacheColorHint="#00000000"
        android:divider="@color/divider_color"
        android:dividerHeight="1.0dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

    </ListView>

</LinearLayout>